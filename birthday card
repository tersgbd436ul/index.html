            height: 100vh;
            flex-direction: column;
        }
        .uno-card {
            width: 200px;
            height: 300px;
            background: url('https://upload.wikimedia.org/wikipedia/commons/5/50/UNO_card_backside.svg') no-repeat center center / cover;
            border-radius: 10px;
            cursor: pointer;
            transition: transform 0.6s;
            transform-style: preserve-3d;
        }
        .flipped {
            transform: rotateY(180deg);
        }
        .message-card {
            display: none;
            width: 200px;
            height: 300px;
            background: white;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            font-size: 20px;
            font-weight: bold;
            color: #ff3b30;
            display: flex;
            justify-content: center;
            align-items: center;
            transform: rotateY(180deg);
        }
        .second-message {
            display: none;
            width: 200px;
            height: 300px;
            background: white;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            font-size: 16px;
            font-weight: bold;
            color: #ff1493;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 15px;
